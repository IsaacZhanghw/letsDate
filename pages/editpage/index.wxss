.background-top {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
}

.userinfo {
    position: relative;
}

.index-user {
    padding: 20px 0;
    text-align: center;
    position: relative;
}

.userinfo-avatar {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    border: 2px solid #4D9AE3;
}

.section-box {
    padding: 0 10px;
    margin: 10px auto;
    text-align: left;
}

.edit-avatar-box {
    text-align: center;
}

.edit-avatar {
    display: inline-block;
    padding: 5rpx 10rpx;
    font-size: .9rem;
    border: 1px solid #eee;
    border-radius: 5px;
}

.section-value {
    padding: 0 10px;
}

.section-title {
    position: relative;
    margin-bottom: 5px;
}

.role-absolute {
    color: #ffa500;
    position: absolute;
    top: 50%;
    right: 15%;
    transform: translate(-50%, -50%);
}

.role-relative {
    position: relative;
}

.role-number {
    position: absolute;
    top: 50%;
}

.number-left {
    left: 0;
    transform: translate(-100%, -50%);
}

.number-right {
    right: 0;
    transform: translate(100%, -50%);
}