.userinfo{
  position: relative;
}
.get-Info-button{
  width: 80%;

  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%)
}
.index-user{
  text-align: center;
  position: relative;
}
.userinfo-avatar{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow:hidden;
}
.userinfo-nickName{
  text-align: center;
}
.edit-icon{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 50%;
  right: 5%;
  transform: translate(0, -50%)
}
.index-border{
  width: 100%;
  height: 20px;
  background-color: #eee;
}
.router-item{
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  margin: 0 auto;
  padding-right: 5%;
  padding-left: 150rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #eee;
  position: relative;
}
.router-icon{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 50%;
  left: 5%;
  transform: translate(0, -50%)
}