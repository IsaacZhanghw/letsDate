/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-nickname {
  color: #aaa;
}
.shouquan-button{
  margin-top: 600rpx; 
}
.index-header{
  width: 100%;
  height: 340rpx;
  /* background-color: #f8E31c; */
  background-image: -webkit-linear-gradient(top, #F8E31C, #F8D71C);
}
.index-card{
  box-sizing:border-box;
  width: 658rpx;
  height: 746rpx;
  border-radius: 24rpx;
  position: absolute;
  top: 126rpx;
  left: 47rpx;
  background-color: #fff;
  box-shadow: 2rpx 4rpx 8rpx 2rpx rgba(142,161,203,0.2);
  padding: 110rpx 60rpx;
}
.userinfo-avatar{
  width: 148rpx;
  height: 148rpx;
  border-radius: 50%;
  position: absolute;
  top: -74rpx;
  left: 254rpx;
  overflow:hidden;
}
.index-card-content{
  display: flex;
  flex-direction: column;
}
.index-card-content-title{
  font: 400 32rpx/32rpx 'PingFangSC','微软雅黑'
}
.index-card-content-box{
  font: 400 28rpx/42rpx 'PingFangSC','微软雅黑';
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  padding: 20rpx 0rpx;
}
.index-card-content-box-item{
  display: flex;
}
.index-card-content-name,.index-card-content-grade{
  box-sizing: border-box;
  display: flex;
  width: 600rpx;
  height: 120rpx;
  padding: 20rpx 0;
  font: 400 32rpx/80rpx 'PingFangSC','微软雅黑';
}
.index-input-element{
  background-color: #F4F4F4;
  width: 421rpx;
  height: 80rpx;
  border-radius: 10rpx;
  padding-left: 40rpx;
}
.index-label{
  font: 400 32rpx/80rpx 'PingFangSC','微软雅黑';
}
.index-card-content-grade-value{
  height: 80rpx;
}
.index-button{
  width: 492rpx;
  height: 114rpx;
  position: fixed;
  bottom: 135rpx;
}
.index-button-image{
  width: 492rpx;
  height: 114rpx;
}
.index-button-text{
  font: 500 36rpx/114rpx 'PingFangSC','微软雅黑';
  position: absolute;
  top: 0;
  left: 210rpx;
}
.index-bottom{
  width: 100%;
  height: 104rpx;
  position: fixed;
  bottom: 0;
}