.point {
    width: 40px;
    display: flex;
    flex-direction: column;
    position: absolute;
    top: -21px;
}

.point .view {
    text-align: center;
    color: #71b8ff;
    position: relative;
    left: -20px;
    font: 400 15px/16px "#FF71B8FF";
}

.point .outter {
    width: 11px;
    height: 11px;
    padding: 3px;
    margin: 0 11px;
    background-color: rgba(113, 184, 255, 0.5);
    border-radius: 50%;
    position: relative;
    left: -20px;
    top: 1px;
    animation: borderAnimation 0.8s ease-in-out infinite;
}

.point .outter .middle {
    width: 4px;
    height: 4px;
    padding: 3px;
    background-color: #71b8ff;
    border-radius: 50%;
}

.point .outter .middle .inner {
    width: 4px;
    height: 4px;
    background-color: #fff;
    border-radius: 50%;
}

@keyframes borderAnimation {
    50% {
        transform: scale(0.5);
    }
}

.nodata-box {
    position: relative;
}

.nodata-box .nodata {
    display: inline-block;
    width: 100%;
    font-size: 18px;
    font-weight: 400;
    line-height: 22px;
    color: #000;
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
}

.loading {
    width: 100%;
    height: 100%;
    position: relative;
}

.loading-gif {
    width: 50%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.loading-box {
    position: fixed;
    z-index: 10;
    background-color: #fff;
}

.redirect-box {
